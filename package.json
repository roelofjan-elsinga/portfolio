{
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run dev -- --watch",
    "prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "php:lint:all": "./vendor/bin/php-cs-fixer fix --rules=@PSR2 -v --using-cache=no ./app",
    "php:lint": "./vendor/bin/php-cs-fixer fix -v --config=./.php_cs.dist --path-mode=intersection"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "acorn": "^6.4.1",
    "cross-env": "^5.1",
    "husky": "^1.3.1",
    "laravel-mix": "^4.0.14",
    "laravel-mix-purgecss": "^4.0.0",
    "laravel-mix-workbox": "^0.1.2",
    "lint-staged": "^8.1.4",
    "minimist": "^1.2.2",
    "sass": "^1.16.0",
    "sass-loader": "7.*",
    "tailwindcss": "^1.4",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.php": [
      "npm run php:lint",
      "git add"
    ]
  }
}
